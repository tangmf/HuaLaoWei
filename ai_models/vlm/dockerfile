# 1. Base image with CUDA for GPU
FROM pytorch/pytorch:2.1.0-cuda11.7-cudnn8-runtime

# 2. Create app directory
WORKDIR /app

# 3. Copy dependency file and install
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 4. Copy application code
COPY app.py .

# 5. (Optional) Copy local model weights into container
#    If you have them locally under model/, uncomment:
COPY model/ ./model/

# 6. Expose port and start server
EXPOSE 8000
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8000"]
