# --------------------------------------------------------
# Base Image: PostgreSQL 15 with PostGIS and pgsql-http
# --------------------------------------------------------
FROM postgres:15

# --------------------------------------------------------
# Install Required System Packages
# --------------------------------------------------------
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates bash git gcc make wget curl unzip \
    postgresql-15-postgis-3 postgresql-15-postgis-3-scripts \
    postgresql-server-dev-15 libgdal-dev libgeos-dev libproj-dev && \
    rm -rf /var/lib/apt/lists/*

# --------------------------------------------------------
# Install pgsql-http Extension
# --------------------------------------------------------
RUN git clone https://github.com/pramsey/pgsql-http.git && \
    cd pgsql-http && make && make install && \
    cd .. && rm -rf pgsql-http

# --------------------------------------------------------
# Default Command
# --------------------------------------------------------
CMD ["postgres"]
